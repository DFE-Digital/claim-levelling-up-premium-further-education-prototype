{% set notStartedCount = 0 %}
{% for claim in data.claims %}
  {% if claim.status == "Not started" %}
    {% set notStartedCount = notStartedCount + 1 %}
  {% endif %}
{% endfor %}

{% set inProgressCount = 0 %}
{% for claim in data.claims %}
  {% if claim.status == "In progress" %}
    {% set inProgressCount = inProgressCount + 1 %}
  {% endif %}
{% endfor %}

{% set verifiedCount = 0 %}
{% for claim in data.claims %}
  {% if claim.status == "Verified" %}
    {% set verifiedCount = verifiedCount + 1 %}
  {% endif %}
{% endfor %}


<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <div class="app-home-statuses app-home-statuses--3-up govuk-!-margin-bottom-4">
      {# <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible"> #}
      {# NOT STARTED #}
      <div class="status-card status-card--problem">
        <span class="status-card__count">{{ notStartedCount }}</span>
        <span class="status-card__status">Not started</span>
      </div>

      {# IN PROGRESS #}   
      <div class="status-card status-card--deferred">
        <span class="status-card__count">{{ inProgressCount }}</span>
        <span class="status-card__status">In progress</span>
      </div>

      {# VERIFIED #} 
      {# <a href="/provider/completed" class="status-card status-card--pending-trn">
        <span class="status-card__count">{{ verifiedCount }}</span>
        <span class="status-card__status">Verified</span>
        <span class="govuk-visually-hidden">View these records.</span>
      </a> #}
    </div>
    {# <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible"> #}
  </div>
</div>